{
    "name": "robwasripped/advent-of-code-2020",
    "description": "PHP Solutions to Advent of Code 2020",
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "vimeo/psalm": "^4.3"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Treacy",
            "email": "email@roberttreacy.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "symfony/console": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Robwasripped\\Advent2020\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Robwasripped\\Advent2020\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "static-analysis": [
            "vendor/bin/psalm"
        ]
    }
}
